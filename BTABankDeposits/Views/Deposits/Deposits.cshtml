@model IEnumerable<BTABankDeposits.Models.DepositListViewModel>

@{
    ViewBag.Title = "Deposits";
}

<h2>Список всех депозитов клиента</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContractNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepositType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepositPercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContractDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TillEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InterestCharges)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepositSum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContractNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepositType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepositPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TillEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterestCharges)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepositSum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @if (item.Status == "Открыт")
                {
                    @Html.ActionLink("Прервать", "Interrupt", new { id = item.Id },htmlAttributes: new { @class = "btn btn-outline-danger"})
                }
            </td>
        </tr>
    }

</table>
